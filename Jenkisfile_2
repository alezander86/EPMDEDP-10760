pipeline {
    agent {
        kubernetes {
            yaml '''
              apiVersion: v1
              kind: Pod
              spec:
                containers:
                - name: sonar
                  image: sonarsource/sonar-scanner-cli:4
                  command:
                  - cat
                  tty: true
              '''
        }
    }
    stages {
        stage('Checkout_the_source_code_sonar') {
            steps {
                container('sonar')
                    sh 'which sonar-scanner'
                }
            }
        }
    }
}
