properties([parameters([string(defaultValue: '1.0.0', name: 'image_version')])])

pipeline {
    agent {
        kubernetes {
            yaml '''
              apiVersion: v1
              kind: Pod
              spec:
                containers:
                - name: sonar
                  image: sonarsource/sonar-scanner-cli:4
                  command:
                  - cat
                  tty: true
              '''
        }
    }
    stages {
        stage('Checkout'){
            steps {
                git branch: 'main', url: 'https://github.com/alezander86/python_app_10760.git'
            }
        }         
        stage('Build docker') {
            steps {
                container('hadolint') {
                    sh 'hadolint Dockerfile | tee -a hadolint_lint.txt'
                }
            }
            post {
                always {
                    archiveArtifacts 'hadolint_lint.txt'
                }
            }
        }
    }
}